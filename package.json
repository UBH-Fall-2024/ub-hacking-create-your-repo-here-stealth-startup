{
  "name": "vscode-momma",
  "displayName": "VsCode Momma",
  "description": "A VS Code extension to interface with different LLMs like OpenAI, Claude.ai, and Llama.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-momma.VsCodeMama",
    "onCommand:vscode-momma.resetConfig"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-momma.VsCodeMama",
        "title": "VsCode Mama"
      },
      {
        "command": "vscode-momma.resetConfig",
        "title": "VsCode Mama: Reset Configuration"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-momma.VsCodeMama",
        "key": "ctrl+opt+s",
        "mac": "ctrl+cmd+s",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "VsCode Momma Configuration",
      "properties": {
        "vscode-momma.apiTokens.openai": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API key",
          "scope": "application"
        },
        "vscode-momma.apiTokens.claudeAi": {
          "type": "string",
          "default": "",
          "description": "Your Claude.ai API key",
          "scope": "application"
        },
        "vscode-momma.apiTokens.ollamaSelected": {
          "type": "boolean",
          "default": false,
          "description": "Use Llama locally (no API key required)"
        }
      }
    }

  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "openai": "^4.71.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "axios": "^1.7.7"
  }
}
